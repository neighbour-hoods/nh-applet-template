<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <style>
      body {
        background: #fafafa;
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        width: 100%;
        height: 100%;
        display: flex;
      }
    </style>
  </head>
  <body>
    <script type="module">
      import { AppAgentWebsocket } from '@holochain/client';
      import Applet from '../src/index.ts';

      async function setup() {
        const appWs = await AppAgentWebsocket.connect(``, '');

        const view = await Applet.appletRenderers({},{}, {}, appWs)
        view.full(document.body)
      }
      setup();
    </script>
  </body>
</html>
